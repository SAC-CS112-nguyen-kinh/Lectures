import java.util.Scanner;

public class wk5Lab2
{
	public static void main(String[] args)
{
	Scanner in = new Scanner(System.in);
	
	int hungry;
	int thirsty;
	int breakfast;
	
	
		
		System.out.println("Hungry?");
		hungry = in.nextInt();
		if ( hungry == 1)
		{	System.out.println("get in line and buy lunch");
			System.out.println(" Thirsty? yes = 1; no =0");
			thirsty = in.nextInt();
			if ( thirsty ==1)
			{	System.out.println(" did you have breakfast?");
				breakfast = in.nextInt();
				if (breakfast == 1)
					System.out.println(" here is diet coke");
				else
					System.out.println(" here is regular coke. \n eat lunch,return tray and leave.");
			}	 
			
			else
				System.out.println("Here is a bottle of water.\n eat lunch,return tray and leave.");
		}	
		else
			System.out.println("Leave the cafe");

		

}
	


}
